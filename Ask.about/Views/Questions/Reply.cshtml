@using System.Collections.Generic;
@using Ask.about.Models;
@{
    ViewData["Title"] = "Reply";
    Question question = (Question)Model;
}

<form method="post">
    <div class="panel-body">@question.Text</div>
    <input type="text" name="qid" value="@question.Id" style="visibility:hidden" /><br />
    @{
        foreach (Reply reply in (List<Reply>)ViewData["Replies"])
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    @reply.Date
                </div>
                <div class="panel-body">
                    @reply.Text
                </div>
                <div class="panel-footer">
                    @reply.User.Login
                </div>
            </div>
        }
    }
    <textarea name="text"></textarea>
    <button type="submit">Add Answer</button>
</form>



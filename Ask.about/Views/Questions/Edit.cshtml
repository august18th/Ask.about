@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <textarea name="text">@Model.Text</textarea>
    <select name="TopicTitle">
        @foreach (var item in Model)
        {
            <option>@item.Title</option>
        }
    </select>
    <button type="submit">Add</button>
</form>
